{
  "name": "laudiolin-backend",
  "version": "1.0.0",
  "description": "Supports the Laudiolin Tauri app.",

  "engines": {
    "node": ">=16.0.0"
  },
  "main": "js/index.js",
  "scripts": {
    "start": "node .",
    "start:dev": "ts-node src/index.ts",
    "dev": "concurrently --kill-others \"npm run watch:compile\" \"npm run watch:start\"",
    "watch:compile": "tsc --watch",
    "watch:start": "tsc-watch --onsuccess \"node build/index.js\"",
    "compile": "tsc",
    "build": "ncc build src/index.ts -o js -m --target es2022"
  },

  "dependencies": {
    "ejs": "^3.1.8",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-ws": "^5.0.2",
    "youtubei.js": "^2.4.1",
    "spotify-web-api-node": "^5.0.2",

    "dotenv": "^16.0.2",
    "mongoose": "^6.5.4",
    "tslog": "^3.3.4"
  },

  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-ws": "^3.0.1",
    "@types/spotify-web-api-node": "^5.0.7",
    "@types/node": "^18.7.14",
    "typescript": "^4.8.2",

    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.1.0",
    "concurrently": "^7.6.0",
    "@vercel/ncc": "^0.34.0"
  }
}
