{
  "name": "laudiolin-backend",
  "version": "1.0.0",
  "description": "Supports the Laudiolin Tauri app.",

  "engines": {
    "node": ">=16.0.0"
  },
  "main": "js/index.js",
  "scripts": {
    "start": "node .",
    "start:dev": "ts-node src/index.ts",
    "compile": "tsc",
    "package": "ncc build build/index.js -o js --target es2022",
    "build": "npm run compile && npm run package"
  },

  "dependencies": {
    "express": "^4.18.1",
    "youtubei.js": "github:LuanRT/YouTube.js",
    "spotify-web-api-node": "^5.0.2",

    "dotenv": "^16.0.2",
    "mongoose": "^6.5.4",
    "tslog": "^3.3.4"
  },

  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/spotify-web-api-node": "^5.0.7",
    "@types/node": "^18.7.14",
    "typescript": "^4.8.2",

    "ts-node": "^10.9.1",
    "@vercel/ncc": "^0.34.0"
  }
}
